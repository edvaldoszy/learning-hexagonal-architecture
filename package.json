{
  "name": "learning-hexagonal-architecture",
  "packageManager": "yarn@3.4.1",
  "scripts": {
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "eslint . --cache",
    "lint": "run-p lint:typescript lint:eslint",
    "postinstall": "husky install",
    "build:clean": "rimraf dist",
    "build:app": "babel src --out-dir dist/app -x '.js,.ts,.tsx' --copy-files --no-copy-ignored",
    "build": "npm-run-all -s build:clean -p build:app",
    "start": "nodemon --ext 'ts' --exec babel-node --extensions '.ts' src/index.ts",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.20.12",
    "@babel/node": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@ngneat/falso": "6.4.0",
    "@types/jest": "29.4.0",
    "@types/node": "18.11.19",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-jest": "29.4.3",
    "babel-plugin-module-resolver": "5.0.0",
    "eslint": "8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-import-helpers": "1.3.1",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "nodemon": "2.0.20",
    "npm-run-all": "4.1.5",
    "rimraf": "4.1.2",
    "typescript": "4.9.5"
  }
}
